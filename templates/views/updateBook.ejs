<html>
  <head>
    <title>Biblioteka</title>
    <link rel="icon" href="/img/weather.png" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include('../partials/header') %>
    <main id="site-main">
      <div class="container">
        <div class="box-nav d-flex-justify-between">
          <div class="filter"><a href="/" class="border-shadow">Wszystkie książki</a></div>
        </div>
        <div class="form-title text-center">
          <h2>Edytuj książkę</h2>
          <span class="text-light">Użyj formularza do edycji ksiażki</span>
        </div>
        <form method="POST" id="update_book">
          <div class="new_book">
            <div class="form-group">
              <label for="name" class="text-light">Tytuł</label>
              <input type="hidden" name="id" value="<%= book._id %>" />
              <input type="text" name="Tytuł" value="<%= book.title %>" placeholder="Podaj tytuł" />
            </div>
            <div class="form-group">
              <label for="author" class="text-light">Autor</label>
              <input type="text" name="Tytuł" value="<%= book.author %>" placeholder="Podaj autora" />
            </div>
            <div class="form-group">
              <button type="submit" class="btn text-dark update">Zapisz</button>
            </div>
          </div>
        </form>

        <%- include('../partials/footer') %>
      </div>
    </main>
    <script src="/js/app.js"></script>
  </body>
</html>
