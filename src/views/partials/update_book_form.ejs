<form method="POST" id="update_book">
  <div class="new_book">
    <div class="form-group">
      <label for="name" class="text-light">Tytuł</label>
      <input type="hidden" name="id" value="<%= book._id %>" />
      <input type="text" name="title" value="<%= book.title %>" placeholder="Podaj tytuł" />
    </div>
    <div class="form-group">
      <label for="author" class="text-light">Autor</label>
      <select class="author-select" id="author" name="author">
        <% for(var i=0;i < authors.length; i++) {%>
        <option value="<%= authors[i]._id %>" <% if(authors[i]._id == book.author){ %> selected <% } %>><%= authors[i].name %> <%= authors[i].surname %></option>
        <%}%>
      </select>
    </div>
    <div class="form-group">
      <button type="submit" class="btn text-dark update">Zapisz</button>
    </div>
  </div>
</form>