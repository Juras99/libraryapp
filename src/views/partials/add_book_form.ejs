<form action="/api/books" method="post" id="add_book">
  <div class="new_book">
    <div class="form-group">
      <label for="title" class="text-light">Tytuł</label>
      <input type="hidden" name="id" value="" />
      <input type="text" name="title" value="" placeholder="Podaj tytuł" />
    </div>
    <div class="form-group">
      <label for="author" class="text-light">Autor</label>
      <select class="author-select" id="author" name="author">
        <% for(var i=0;i < authors.length; i++) {%>
        <option value="<%= authors[i]._id %>"><%= authors[i].name %> <%= authors[i].surname %></option>
        <%}%>
      </select>
    </div>
    <div class="form-group">
      <button type="submit" class="btn text-dark update">Zapisz</button>
    </div>
  </div>
</form>