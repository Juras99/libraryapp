<html>

<head>
  <title>Biblioteka</title>
  <link rel="icon" href="/img/weather.png" />
  <link rel="stylesheet" href="/css/styles.css" />
</head>

<body>
  <%- include('./partials/header') %>
  <main id="site-main">
    <div class="container">
      <div class="box-nav d-flex-justify-between">
        <a href="/" class="border-shadow">
          <span class="text-gradient">Wyświetl książki</span>
        </a>
        <a style="margin-left:20px" href="/addbook" class="border-shadow">
          <span class="text-gradient">Dodaj książkę</span>
        </a>
        <a style="margin-left:20px" href="/addauthor" class="border-shadow">
          <span class="text-gradient">Dodaj autora</span>
        </a>

        <form action="/" method="POST">
          <table class="table">
            <thead class="thead-dark">
              <tr>
                <th>Pozycja</th>
                <th>Imie</th>
                <th>Nazwisko</th>
                <th>Akcja</th>
              </tr>
            </thead>
            <tbody>
              <%- include('./partials/show_authors') %>
            </tbody>
          </table>
        </form>
      </div>
      <%- include('./partials/footer') %>
    </div>

  </main>
</body>

</html>